<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
  xmlns:android="http://schemas.android.com/apk/res/android"
  android:orientation="vertical"
  android:layout_width="match_parent"
  android:layout_height="match_parent"
  android:background="@color/default_background">
		<CheckBox
		    android:id="@+id/chkVoiceCommands"
		    android:layout_width="wrap_content"
        	android:layout_height="wrap_content"
	        android:text="@string/voice_commands_caption"
	        android:textSize="20sp" 
	        android:layout_marginTop="15dp"
            android:visibility="visible"
            android:textColor="@color/default_black"
         />
		
		<LinearLayout
			android:orientation="horizontal" 
			android:layout_width="250dp" 
			android:layout_height="wrap_content"
			android:layout_marginTop="15dp">
			<TextView 
			    android:layout_width="wrap_content" 
			    android:layout_height="wrap_content" 
			    android:textSize="20sp" 
			    android:text="@string/capture_keyword_caption"/> 
			<EditText
			    android:inputType="textNoSuggestions"
			    android:id="@+id/txtCaptureKeyword"
			    android:layout_width="90dp"
	        	android:layout_height="wrap_content"
		        android:textSize="20sp"
	            android:visibility="visible"
	            android:textColor="@color/default_black"
	         />
		</LinearLayout>

        <Button android:text="@string/ok" 
	        android:id="@+id/btn_cam_params_ok" 
	        android:layout_width="fill_parent" 
	        android:layout_height="wrap_content"
	        android:textColor="@color/default_black">
	    </Button>
</LinearLayout>
