<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/layout_vehicle_details"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/light_gray_background"
    >
   	<TextView android:id="@+id/txt_year_make_model" 
	    android:layout_width="fill_parent"
	    android:layout_height="wrap_content"
	    android:textColor="@color/details_text"
	    android:textSize="30sp"
	    android:textStyle="bold"
	    android:gravity="center_horizontal" />
	<View android:id="@+id/line_1"
	    android:layout_width="fill_parent"
	    android:layout_height="1dp"
	    android:layout_marginRight="30dp"
	    android:layout_marginLeft="30dp"
	    android:background="@android:color/black"
		android:layout_below="@id/txt_year_make_model"/>

   	<RelativeLayout
   	    android:id="@+id/collapsible_details"
	    android:layout_width="fill_parent"
	   	android:layout_height="wrap_content"
	   	android:layout_below="@id/line_1">
	   			
	   	<TextView android:id="@+id/txt_color" 
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
		    android:singleLine="true"
			android:textColor="@color/details_text"
			android:textSize="25sp"
			android:layout_alignParentLeft="true"
			android:layout_marginLeft="5dp" />
	   	<TextView android:id="@+id/txt_location" 
		    android:layout_width="match_parent"
		    android:layout_height="wrap_content"
		    android:singleLine="true"
		    android:textColor="@color/details_text"
		    android:textSize="25sp"
		    android:layout_toRightOf="@id/txt_color"
		    android:layout_alignParentRight="true"
		    android:gravity="right"
		    android:layout_marginRight="5dp" />
	   	<TextView android:id="@+id/txt_damage" 
		    android:layout_width="wrap_content"
		    android:layout_height="wrap_content"
		    android:singleLine="true"
		    android:textColor="@color/details_text"
		    android:textSize="25sp"
		    android:layout_below="@id/txt_color"
		    android:layout_alignParentLeft="true"
		    android:layout_marginLeft="5dp" />
	   	<TextView android:id="@+id/txt_run_drive" 
		    android:layout_width="wrap_content"
		    android:layout_height="wrap_content"
		    android:singleLine="true"
		    android:textColor="@color/details_text"
		    android:textSize="25sp"
		    android:layout_below="@id/txt_color"
		    android:layout_toRightOf="@id/txt_damage"
		    android:layout_alignParentRight="true"
		    android:gravity="right"
		    android:layout_marginRight="5dp" />
	   	<TextView android:id="@+id/txt_provider" 
		    android:layout_width="wrap_content"
		    android:layout_height="wrap_content"
		    android:singleLine="true"
		    android:textColor="@color/details_text"
		    android:textSize="25sp"
			android:maxLines="1"
			android:ellipsize="end"
			android:layout_below="@id/txt_damage"
		    android:layout_alignParentLeft="true"
		    android:layout_marginLeft="5dp" />
	    <TextView android:id="@+id/txt_vin" 
		    android:layout_width="wrap_content"
		    android:layout_height="wrap_content"
		    android:singleLine="true"
		    android:textColor="@color/details_text"
		    android:textSize="25sp"
			android:layout_below="@id/txt_provider"
		    android:layout_alignParentLeft="true"
		    android:layout_marginLeft="5dp" />
	    <TextView android:id="@+id/txt_status" 
		    android:layout_width="wrap_content"
		    android:layout_height="wrap_content"
		    android:singleLine="true"
		    android:textColor="@color/details_text"
		    android:textSize="25sp"
		    android:layout_below="@id/txt_vin"
		    android:layout_alignParentLeft="true"
		    android:layout_marginLeft="5dp" />
	    <TextView android:id="@+id/txt_sale_doc" 
		    android:layout_width="wrap_content"
		    android:layout_height="wrap_content"
		    android:singleLine="true"
		    android:textColor="@color/details_text"
		    android:textSize="25sp"
		    android:layout_below="@id/txt_vin"
			android:layout_centerHorizontal="true" />
	    <TextView android:id="@+id/txt_auction_date" 
		    android:layout_width="wrap_content"
		    android:layout_height="wrap_content"
		    android:singleLine="true"
		    android:textColor="@color/details_text"
		    android:textSize="25sp"
		    android:layout_below="@id/txt_vin"
		    android:layout_toRightOf="@id/txt_sale_doc"
		    android:layout_alignParentRight="true"
		    android:gravity="right"
		    android:layout_marginRight="5dp" />
	</RelativeLayout>    
	<LinearLayout
	    android:id="@+id/expand_collapse_line"
	    android:layout_width="fill_parent"
	    android:layout_height="wrap_content"
	   	android:gravity="center_horizontal"
	   	android:layout_below="@id/collapsible_details">   		
   		    <ImageView
   		        android:id="@+id/collapse_button"
	    		android:layout_width="wrap_content"
	    		android:layout_height="wrap_content"
	    		android:orientation="vertical"
   		        android:src="@drawable/ic_action_collapse">
   		    </ImageView>
       		<View android:layout_width="match_parent"
			    android:layout_height="3dp"
			    android:background="@drawable/shadow_gradient"/>
	</LinearLayout>    
</RelativeLayout>
