<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_gravity="top|center_horizontal"
    android:layout_marginLeft="20dp"
    android:layout_marginRight="20dp"
    android:background="@android:color/transparent"
    android:gravity="top"
    android:orientation="horizontal" >

    <EditText
        android:id="@+id/txt_stock_search"
        android:layout_width="0dp"
        android:layout_height="69dp"
        android:layout_weight=".5"
        android:ems="10"
        android:hint="@string/search_box_hint"
        android:inputType="textVisiblePassword"
        android:textColor="@color/details_text"
        android:textCursorDrawable="@null"
        android:textSize="30sp" />

    <Button
        android:id="@+id/btn_vehicle_search"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginRight="20dp"
        android:background="@drawable/search_button_background_selector" />

    <Button
        android:id="@+id/btn_vehicle_voice_search"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginRight="5dp"
        android:background="@drawable/voice_search_button_background_selector" />

    <Button
        android:id="@+id/btn_vehicle_barcode_search"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/barcode_button_background_selector" />

</LinearLayout>