<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/default_background" >
    
    <FrameLayout android:id="@+id/stock_checkin_vehicle_details_frame"
		android:layout_width="match_parent"
        android:layout_height="wrap_content" />
    
    <ListView
        android:id="@+id/stock_checkin_list"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1" >
    </ListView>
    
    <TextView
        android:id="@+id/checkin_coming_soon"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/checkin_coming_soon"
        android:visibility="gone"
        android:textSize="25sp" >
    </TextView>
    
    <TextView
        android:id="@+id/checkin_wrong_status"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/checkin_wrong_status"
        android:visibility="gone"
        android:textSize="30sp" >
    </TextView>
    
    <FrameLayout android:id="@+id/stock_checkin_input_frame"
		android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:visibility="gone" />
    
</LinearLayout>
