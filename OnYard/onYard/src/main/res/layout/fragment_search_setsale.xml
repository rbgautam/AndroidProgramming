<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/default_background"
    android:orientation="vertical" >
    
   	<FrameLayout android:id="@+id/search_setsale_search_frame"
		android:layout_width="match_parent"
        android:layout_height="wrap_content" />
    
	<LinearLayout android:id="@+id/auction_date_layout"
	    android:layout_width="match_parent"
	    android:layout_height="wrap_content"
	    android:orientation="horizontal"
    	android:background="@color/default_background"
    	android:layout_marginTop="10dp"
    	android:visibility="gone"
    	android:layout_marginLeft="9dp"
    	android:layout_marginRight="5dp" >
	    <TextView
	        android:id="@+id/auction_date_label"
	        android:layout_width="0dp"
	        android:layout_weight=".45"
	        android:layout_height="wrap_content"
	        android:text="@string/auction_date_label"
	        android:textSize="19sp"/>
	    
	    <Spinner
		    android:id="@+id/auction_date_spinner"
		    android:layout_width="0dp"
	        android:layout_weight=".55"
		    android:layout_height="wrap_content" />
	</LinearLayout>
	
	<FrameLayout android:id="@+id/setsaleAction_fragment_container"
		android:layout_width="match_parent"
        android:layout_height="wrap_content" />
</LinearLayout>
