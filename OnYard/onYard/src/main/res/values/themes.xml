<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:android="http://schemas.android.com/apk/res/android">
    
    <style name="OnYardActionBarTheme"
           parent="@android:style/Theme.Holo.Light.DarkActionBar">
        <item name="android:actionBarStyle">@style/MyActionBar</item>
<!--  
		<item name="android:textViewStyle">@style/OnYardTextViewStyle</item>
		<item name="android:textAppearance">@style/OnYardButtonTextStyle</item>
-->
    </style>

    <!-- ActionBar styles -->
    <style name="MyActionBar"
           parent="@android:style/Widget.Holo.Light.ActionBar.Solid.Inverse">
        <item name="android:background">@color/iaa_red</item>
        <item name="android:titleTextStyle">@style/MyActionBarTitleText</item>
        <item name="android:subtitleTextStyle">@style/MyActionBarSubTitleText</item>
        <item name="android:displayOptions"></item>
    </style>
    
    <!-- ActionBar title text -->
    <style name="MyActionBarTitleText"
           parent="@style/OnYardActionBarTheme">
        <item name="android:textColor">@color/default_white</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">18sp</item>
    </style>

	<!-- ActionBar subtitle text -->
    <style name="MyActionBarSubTitleText"
           parent="@style/OnYardActionBarTheme">
        <item name="android:textColor">@color/default_white</item>
        <item name="android:textSize">16sp</item>
    </style>
    
	<!-- ActionBar navigation button caption -->    
	<style name="ActionBarButtonTextSmall"
           parent="@style/OnYardActionBarTheme">
        <item name="android:textColor">@color/default_white</item>
        <item name="android:textSize">14sp</item>
        <item name="android:paddingLeft">1dp</item>
        <item name="android:paddingRight">1dp</item>
	</style>  

	<!-- ActionBar button caption-->
    <style name="ActionBarButtonText"
           parent="@style/OnYardActionBarTheme">
        <item name="android:textColor">@color/default_black</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">15sp</item>
        <item name="android:paddingLeft">3dp</item>
        <item name="android:paddingRight">3dp</item>
	</style>    
	<!-- AccountPreferences Headers Styles -->
	<style name="AccountPreferencesHeaders"
	    parent="@android:attr/listSeparatorTextViewStyle">
    <item name="android:textStyle">bold</item>
    <item name="android:textSize">17sp</item>
    <item name="android:textColor">@color/default_black</item>
    <item name="android:paddingTop">5dp</item>
    <item name="android:paddingBottom">5dp</item>
    <item name="android:layout_height">match_parent</item>
    <item name="android:layout_width">match_parent</item>
    <item name="android:drawableBottom">@drawable/settings_line</item>
    <item name="android:drawablePadding">4dp</item>

	</style>
	<style name="Theme.Custom" parent="@style/OnYardActionBarTheme">
    <item name="android:listSeparatorTextViewStyle">@style/AccountPreferencesHeaders</item>               
</style>

