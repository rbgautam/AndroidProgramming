<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
  xmlns:android="http://schemas.android.com/apk/res/android"
  android:orientation="vertical"
  android:layout_width="match_parent"
  android:layout_height="wrap_content">
	<TextView android:text="" 
	    android:id="@+id/lbl_year_make_model" 
	    android:layout_width="wrap_content"
	    android:layout_height="wrap_content"
	    android:textSize="25sp"
		android:textColor="@color/iaa_red"
		android:textStyle="bold"
		android:layout_marginTop="55sp"
		android:layout_marginLeft="15sp"
		android:layout_marginRight="15sp">
    </TextView>
    <TextView android:text="Stock Number: " 
	    android:id="@+id/lbl_stock_number" 
	    android:layout_width="wrap_content"
	    android:layout_height="wrap_content"
	    android:textSize="19sp"
		android:textColor="@color/details_text"
		android:layout_marginLeft="15sp"
		android:layout_marginRight="15sp">
    </TextView>
    <TextView android:text="VIN: "
	    android:id="@+id/lbl_vin"
	    android:layout_width="wrap_content"
	    android:layout_height="wrap_content"
	    android:textSize="19sp"
		android:textColor="@color/details_text"
		android:layout_marginLeft="15sp"
		android:layout_marginRight="15sp">
    </TextView>
    <TextView android:text="Color: " 
	    android:id="@+id/lbl_color" 
	    android:layout_width="wrap_content" 
	    android:layout_height="wrap_content"
	    android:textSize="19sp"
		android:textColor="@color/details_text"
		android:layout_marginLeft="15sp"
		android:layout_marginRight="15sp">
    </TextView>
    <TextView android:text="Damage: " 
	    android:id="@+id/lbl_damage" 
	    android:layout_width="wrap_content" 
	    android:layout_height="wrap_content"
	    android:textSize="19sp"
		android:textColor="@color/details_text"
		android:layout_marginLeft="15sp"
		android:layout_marginRight="15sp">
    </TextView>
    <TextView android:text="Status: " 
	    android:id="@+id/lbl_status" 
	    android:layout_width="wrap_content" 
	    android:layout_height="wrap_content"
	    android:textSize="19sp"
		android:textColor="@color/details_text"
		android:layout_marginLeft="15sp"
		android:layout_marginRight="15sp">
    </TextView>
    <TextView android:text="Provider: " 
	    android:id="@+id/lbl_salvage_provider" 
	    android:layout_width="wrap_content" 
	    android:layout_height="wrap_content"
	    android:textSize="19sp"
		android:textColor="@color/details_text"
		android:layout_marginLeft="15sp"
		android:layout_marginRight="15sp">
    </TextView>
    <TextView android:text="Location: " 
	    android:id="@+id/lbl_aisle_stall" 
	    android:layout_width="wrap_content" 
	    android:layout_height="wrap_content"
	    android:textSize="19sp"
		android:textColor="@color/details_text"
		android:layout_marginLeft="15sp"
		android:layout_marginRight="15sp">
    </TextView>
    <Button android:text="" 
	    android:id="@+id/btn_csa" 
	    android:layout_width="150sp" 
	    android:layout_height="75sp"
	    android:background="@drawable/csa_today_background_button_selector"
	    android:layout_gravity="right"
	    android:layout_marginLeft="15sp"
		android:layout_marginRight="15sp">
    </Button>
</LinearLayout>
